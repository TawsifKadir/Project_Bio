<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.xplo.code.ui.components.IconCard
            android:id="@+id/viewHousehold"
            android:layout_width="@dimen/grid_cell_size"
            android:layout_height="@dimen/grid_cell_size"
            app:icon="@drawable/ic_households"
            app:title="Households" />

        <com.xplo.code.ui.components.IconCard
            android:id="@+id/viewAlternate"
            android:layout_width="@dimen/grid_cell_size"
            android:layout_height="@dimen/grid_cell_size"
            app:icon="@drawable/ic_alternates_24"
            app:title="Alternates" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <com.xplo.code.ui.components.IconCard
            android:id="@+id/viewReport"
            android:layout_width="@dimen/grid_cell_size"
            android:layout_height="@dimen/grid_cell_size"
            app:icon="@drawable/ic_reports"
            app:title="Reports" />

        <com.xplo.code.ui.components.IconCard
            android:id="@+id/viewPayment"
            android:layout_width="@dimen/grid_cell_size"
            android:layout_height="@dimen/grid_cell_size"
            app:icon="@drawable/ic_payments"
            app:title="Payments" />

    </LinearLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/btTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:visibility="invisible" />

</LinearLayout>