<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="8dp"
        android:text="Page - (5/6)"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPage">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/llCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_finger"
                    app:tint="?attr/colorIcon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/add_fingerprints"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgRT"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/right_thumb" />
                </LinearLayout>


                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgRI"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/right_index" />
                </LinearLayout>


                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgRM"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/right_middle" />
                </LinearLayout>


                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgRR"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/right_ring" />
                </LinearLayout>

                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgRL"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/right_little" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgLT"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/left_thumb" />
                </LinearLayout>


                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgLI"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/left_index" />
                </LinearLayout>


                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgLM"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/left_middle" />
                </LinearLayout>


                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgLR"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/left_ring" />
                </LinearLayout>

                <LinearLayout style="@style/AppLayoutStyleFinger">

                    <ImageView
                        android:id="@+id/imgLL"
                        style="@style/AppImgStyleFinger" />

                    <TextView
                        style="@style/AppTextView.Finger"
                        android:text="@string/left_little" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_height="wrap_content">

        <include
            android:id="@+id/view_button_back_next"
            layout="@layout/view_button_back_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
