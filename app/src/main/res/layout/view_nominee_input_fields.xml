<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/first_name" />

            <EditText
                android:id="@+id/etFirstName"
                style="@style/AppEditText.Form.Text.Min3" />

        </LinearLayout>

        <include layout="@layout/view_margin_space" />

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/middle_name" />

            <EditText
                android:id="@+id/etMiddleName"
                style="@style/AppEditText.Form.Text.Min3" />

        </LinearLayout>

        <include layout="@layout/view_margin_space" />


        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/last_name" />

            <EditText
                android:id="@+id/etLastName"
                style="@style/AppEditText.Form.Text.Min3" />

        </LinearLayout>

        <include layout="@layout/view_margin_space" />
        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/nick_name" />

            <EditText
                android:id="@+id/etNickName"
                style="@style/AppEditText.Form.Text.Min3" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/nominee_relationship_to_the_household_head" />


            <Spinner
                android:id="@+id/spRelation"
                style="@style/AppSpinnerForm" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/age" />


            <EditText

                android:id="@+id/etAge"
                style="@style/AppEditText.Form.Number"
                android:maxLength="2" />

        </LinearLayout>

        <include layout="@layout/view_margin_space" />

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/gender" />


            <Spinner
                android:id="@+id/spGender"
                style="@style/AppSpinnerForm" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="Does the nominee read and write?" />


            <RadioGroup
                android:id="@+id/rgReadWrite"
                style="@style/AppRadioGroupForm">

                <RadioButton
                    android:id="@+id/rbReadWriteYes"
                    style="@style/AppRadioButton.Form"
                    android:text="Yes"
                    tools:checked="true" />

                <RadioButton
                    android:id="@+id/rbReadWriteNo"
                    style="@style/AppRadioButton.Form"
                    android:text="No"
                    tools:checked="false" />

            </RadioGroup>

        </LinearLayout>


        <include layout="@layout/view_margin_space" />

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/what_does_currently_do_for_a_living" />


            <Spinner
                android:id="@+id/spOccupation"
                style="@style/AppSpinnerForm" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>




