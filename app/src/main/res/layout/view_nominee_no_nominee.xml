<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewNomineeNoNominee"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1"
            tools:visibility="visible">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="@string/select_reason_why_not" />


            <Spinner
                android:id="@+id/spReasonNoNominee"
                style="@style/AppSpinnerForm" />

        </LinearLayout>

        <include layout="@layout/view_margin_space" />

        <LinearLayout
            android:id="@+id/llParentOtherReason"
            style="@style/AppLinearLayoutInputBox"
            android:layout_weight="1"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/AppTextView.Input.Header"
                android:text="Other Reason" />


            <EditText
                android:id="@+id/etOtherReason"
                style="@style/AppEditText.Form.Text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>




