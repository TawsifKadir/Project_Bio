<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <TextView
        android:id="@+id/tvPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="8dp"
        android:text="Page - (3/5)"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout style="@style/AppLinearLayoutInputBox">

                <TextView
                    style="@style/AppTextView.Input.Header"
                    android:text="@string/household_size" />

                <EditText
                    android:id="@+id/etHouseholdSize"
                    style="@style/AppEditText.Form.Number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/male_household_members" />

                    <EditText
                        android:id="@+id/etMaleHouseholdMembers"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>

                <include layout="@layout/view_margin_space" />

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/female_household_members" />

                    <EditText
                        android:id="@+id/etFemaleHouseholdMembers"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_0_2_yrs_old" />

                    <EditText
                        android:id="@+id/etHouseholdMembers0_2"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>

                <include layout="@layout/view_margin_space" />

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_3_5_yrs_old" />

                    <EditText
                        android:id="@+id/etHouseholdMembers3_5"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_6_17_yrs_old" />

                    <EditText
                        android:id="@+id/etHouseholdMembers6_17"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>

                <include layout="@layout/view_margin_space" />

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_18_35_yrs_old" />

                    <EditText
                        android:id="@+id/etHouseholdMembers18_35"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_36_45_yrs_old" />

                    <EditText
                        android:id="@+id/etHouseholdMembers36_45"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>

                <include layout="@layout/view_margin_space" />

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_46_64_yrs_old" />

                    <EditText
                        android:id="@+id/etHouseholdMembers46_64"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout style="@style/AppLinearLayoutInputBox">

                <TextView
                    style="@style/AppTextView.Input.Header"
                    android:text="@string/household_members_65_and_above" />

                <EditText
                    android:id="@+id/etHouseholdMembers65andAbove"
                    style="@style/AppEditText.Form.Number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_with_disability" />

                    <EditText
                        android:id="@+id/etHouseholdMembersWithDisability"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>

                <include layout="@layout/view_margin_space" />

                <LinearLayout
                    style="@style/AppLinearLayoutInputBox"
                    android:layout_weight="1">

                    <TextView
                        style="@style/AppTextView.Input.Header"
                        android:text="@string/household_members_with_chronically_ill" />

                    <EditText
                        android:id="@+id/etHouseholdMembersWithChronicallyIll"
                        style="@style/AppEditText.Form.Number" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_height="wrap_content">

        <include
            android:id="@+id/view_button_back_next"
            layout="@layout/view_button_back_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
